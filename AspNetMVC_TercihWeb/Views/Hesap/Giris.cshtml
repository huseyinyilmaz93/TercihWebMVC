@model AspNetMVC_TercihWeb.Models.AccountModels.Giris

@{
    ViewBag.Title = "Giris";
}

<h2>Giris</h2>
<script src="~/Scripts/Hesap/giris.js"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Giris</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div style="color:red" id="hata" class="col-md-10">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KullaniciAdi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KullaniciAdi)
                @Html.ValidationMessageFor(model => model.KullaniciAdi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sifre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Sifre)
                @Html.ValidationMessageFor(model => model.Sifre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BeniHatirla, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BeniHatirla, new { id = "beniHatirla" })
                @Html.ValidationMessageFor(model => model.BeniHatirla)
            </div>
        </div>

        <div class="form-group">
            <div id="btn_giris" class="col-md-offset-2 col-md-10">
                <input type="button" value="Giriş Yap" class="btn btn-default" />
            </div>
        </div>
    </div>
}