@using Microsoft.AspNet.Identity;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - TercihWeb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Content/css/Ozel.css" rel="stylesheet" />
    <link href="~/Content/css/reset.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
</head>
<body>
    <div class="container m0">
        <header class="col-md-12 col-lg-12 col-xs-12 col-sm-12 ml-15">
            <img class="img-responsive" alt="Fon" src="~/Content/images/fon.jpg" />
            <nav class="navbar navbar-default">
                <div class="container-form">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">

                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Navigasyon</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/Site/Index"><strong>Tercih Web</strong></a>
                    </div>
                    <input id="id" type="hidden" value="@User.Identity.GetUserId()" /> 
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="/Site/Index">Anasayfa <span class="sr-only">Varsayılan</span></a></li>
                            <li><a href="/UniPuan/Index">Üniversite Puanları</a></li>
                            <li><a href="/UniPuan/PuanHesaplama">Üniversite Puan Hesaplama</a></li>
                            <li><a href="/LisePuan/PuanHesaplama">Lise Puan Hesaplama</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.Identity.GetUserName() != "admin")
                                {
                                    <li><a href="/Kullanici/Index">Benim Sayfam</a></li>
                                    <li><a href="/Kullanici/Cikis">Çıkış Yap</a></li>
                                }
                                else
                                {
                                    <li><a href="/Admin/Index">Benim Sayfam</a></li>
                                    <li><a href="/Admin/Cikis">Çıkış Yap</a></li>                                    
                                }

                            }
                            else
                            {
                                <li><a href="/Hesap/Giris">Giriş Yap</a></li>
                            }
                        </ul>
                    </div><!-- /.navbar-collapse -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    </div><!-- /.container-fluid -->
                </div>
            </nav>
        </header>
        @RenderBody()
    </div>
    @Html.Partial("PartialFooter")
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery-2.2.4.min.js"></script>
</body>
</html>
